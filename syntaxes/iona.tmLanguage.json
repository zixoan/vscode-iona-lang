{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Iona",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#parenthesis"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#curlyBrackets"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#functionCalls"
		},
		{
			"include": "#squareBrackets"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.iona",
				"match": "\\b(func|if|else|while|do|for|return|var|in)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.iona",
			"begin": "\"",
			"end": "\""
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.block.iona",
					"begin": "/\\*",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.iona"
						}
					},
					"end": "\\*/"
				},
				{
					"name": "comment.line.double-slash.iona",
					"match": "//.*"
				}
			]
		},
		"parenthesis": {
			"begin": "(\\()",
			"end": "(\\))",
			"beginCaptures": {
				"1": {
					"name": "meta.brace.round.iona"
				}
			},
			"endCaptures": {
				"1": {
					"name": "meta.brace.round.iona"
				}
			},
			"patterns": [
				{ "include": "$self" }
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.iona",
					"match": "(\\+|\\-|\\*|/|==|>|<|>=|<=|=)"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.iona",
					"match": "\\b(true|false|PI|INT_MIN|INT_MAX|FLOAT_MIN|FLOAT_MAX)\\b"
				},
				{
					"name": "constant.numeric.iona",
					"match": "(?:0|[0-9]+.?[0-9]+)"
				}
			]
		},
		"curlyBrackets": {
			"begin": "({)",
			"end": "(})",
			"beginCaptures": {
				"1": {
					"name": "meta.brace.curly.iona"
				}
			},
			"endCaptures": {
				"1": {
					"name": "meta.brace.curly.iona"
				}
			},
			"patterns": [
				{ "include": "$self" }
			]
		},
		"squareBrackets": {
			"begin": "(\\[)",
			"end": "(\\])",
			"beginCaptures": {
				"1": {
					"name": "meta.brace.square.iona"
				}
			},
			"endCaptures": {
				"1": {
					"name": "meta.brace.square.iona"
				}
			},
			"patterns": [
				{ "include": "$self" }
			]
		},
		"functions": {
			"name": "meta.function.iona",
			"begin": "(func)\\s(\\w+)(\\()(.*)(\\))\\s*({)",
			"end": "(})",
			"beginCaptures": {
				"1" : {
					"name" : "entity.name.function.iona"
				},
				"2" : {
					"name": "meta.brace.round.iona"
				},
				"3" : {
					"name": "meta.function.parameters.iona"
				},
				"4" : {
					"name": "meta.brace.round.iona"
				},
				"5" : {
					"name": "meta.brace.curly.iona"
				}
			},
			"endCaptures": {
				"1": {
					"name": "meta.brace.curly.iona"
				}
			},
			"patterns": [
				{"include": "$self"}
			]
		},
		"functionCalls": {
			"name": "meta.function-call.with-arguments.iona",
			"begin": "(\\w+)(\\()",
			"end": "(\\))",
			"beginCaptures": {
				"1" : {
					"name": "entity.name.function.iona"
				},
				"2" : {
					"name": "meta.brace.round.iona"
				}
			},
			"endCaptures": {
				"1": {
					"name": "meta.brace.round.iona"
				}
			},
			"patterns": [
				{"include": "$self"}
			]
		}
	},
	"scopeName": "source.iona"
}